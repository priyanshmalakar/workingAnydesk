{
  "productName": "WebZone Connect",
  "appId": "com.webzone.remotecontrol",
  "directories": {
    "output": "release/"
  },
  "publish": [
    {
      "provider": "generic",
      "url": "/"
    }
  ],
  "files": [
    "**/*",
    "!**/*.ts",
    "!stuff/",
    "!socketio-node/",
    "!old/",
    "!.github",
    "!.vscode",
    "!.code-workspace",
    "!.npmrc",
    "!*.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!_config.yml",
    "!angular.json",
    "!tsconfig*.json",
    "!tslint.json",
    "!.eslintrc.json",
    "!karma.conf.js",
    "!angular.webpack.js",
    "!*.map"
  ],
  "win": {
    "icon": "dist/assets/icons",
    "requestedExecutionLevel": "asInvoker",
    "target": ["nsis"],
    "signingHashAlgorithms": ["sha256"],
    "publisherName": "WebZone Technologies",
    "certificateFile": "build/codesign/cert.pfx",
    "certificatePassword": "YOUR_PASSWORD"
  },
  "nsis": {
    "allowElevation": true,
    "deleteAppDataOnUninstall": true,
    "oneClick": true,
    "perMachine": true,
    "allowToChangeInstallationDirectory": false,
    "runAfterFinish": true,
    "createStartMenuShortcut": true,
    "createDesktopShortcut": true,
    "include": "build/installer.nsh"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": ["AppImage"]
  }
}
